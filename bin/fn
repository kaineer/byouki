#!/bin/bash

LOG_LEVEL=${LOG_LEVEL:-error}

_ts() {
  date +": %H:%M:%S :"
}

C0=$(echo ":error:warn:info:debug:" | grep ":${LOG_LEVEL}:" | wc -l)
if [[ "$C0" == "0" ]]; then
  error() {
    echo -n ""
  }
else
  error() {
    # echo " [ERROR]" $@
    echo -e " \e[0;34mERROR\e[0m" $(_ts) $@
  }
fi

C1=$(echo ":warn:info:debug:" | grep ":${LOG_LEVEL}:" | wc -l)
if [[ "$C1" == "0" ]]; then
  warn() {
    echo -n ""
  }
else
  warn() {
    echo -e "\e[0;33mWARN \e[0m" $(_ts) $@
  }
fi

C2=$(echo ":info:debug:" | grep ":${LOG_LEVEL}:" | wc -l)
if [[ "$C2" == "0" ]]; then
  info() {
    echo -n ""
  }
else
  info() {
    # echo " [INFO ]" $@
    echo -e " \e[0;36mINFO \e[0m" $(_ts) $@
  }
fi

C3=$(echo ":debug:" | grep ":${LOG_LEVEL}:" | wc -l)
if [[ "$C3" == "0" ]]; then
  debug() {
    echo -n ""
  }
else
  debug() {
    #echo " [DEBUG]" $@
    echo -e " \e[1;30mDEBUG\e[0m" $(_ts) $@
  }
fi
