#!/usr/bin/bash

# DONE: add directory for configuring some tool
# DONE: add action for specified tool
# DONE: add detect, title, run scripts for specified action
# DONE: add ls
# TODO: add fzf select then edit for config actions
# TODO: move script into dotfiles/.../scripts

BIN0=$(readlink -f $0)
DIR0=$(dirname $BIN0)
CONFIG_ROOT="$HOME/.config/config"
EDITOR=${EDITOR:-vi}
DIRD="${DIR0}/cfg.d"

source $DIR0/fn

create_action_and_edit() {
  DIR="$CONFIG_ROOT/$1"
  mkdir -p "$DIR"
  FILE="$DIR/run"
  touch $FILE && chmod 755 $FILE
  $EDITOR $FILE
}

add_item() {
  ITEM=$1
  MAKE_ACTION="false"

  if [[ "$2" != "" ]]; then
    ITEM="$ITEM/$2"
    MAKE_ACTION="true"
  fi

  NSLASHES=$(echo $ITEM | grep "/" | wc -l)

  if [[ "$NSLASHES" == "1" ]]; then
    MAKE_ACTION="true"
  fi

  if [[ "$MAKE_ACTION" == "false" ]]; then
    warn "You should specify tool AND action"
  else
    create_action_and_edit $ITEM
  fi
}

run_item() {
  ITEM=$1
  if [[ "$ITEM" == "" ]]; then
    SELECTED=$(cfg ls | fzf)
  else
    SELECTED=$(cfg ls | fzf -1 -q"$ITEM")
  fi
  if [[ "$SELECTED" != "" ]]; then
    SELECTED=$(echo $SELECTED | sed 's/[ ]*::.*$//')
    echo "## ${SELECTED}"
    "$CONFIG_ROOT/$SELECTED/run"
    echo ""
  fi
}

remove_item() {
  ITEM=$1
  rm -rf $CONFIG_ROOT/$ITEM
}

_ensure_item_dir() {
  if [[ "$ITEM" != "" ]]; then
    DIR="$CONFIG_ROOT/$ITEM"
    if [ ! -d $DIR ]; then
      debug "mkdir -p $DIR"
      mkdir -pf $DIR
    fi
  fi
}

case "$1" in
"add" | "edit")
  shift
  add_item $@
  ;;
"ls")
  source $DIRD/list_folders
  ;;
"run")
  shift
  run_item $@
  ;;
"rm")
  shift
  remove_item $@
  ;;
"title" | "detect" | "dependencies")
  source $DIRD/edit_item_file $@
  ;;
"e0")
  $EDITOR $BIN0
  ;;
"sync")
  cfg run byouki/sync
  ;;
"" | "h" | "help")
  cat $DIR0/cfg.d/usage.md
  ;;
esac
