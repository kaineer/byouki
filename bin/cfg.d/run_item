#!/bin/bash

ITEM=$1

debug "## ITEM=${ITEM}"

_run_detect() {
  DF="$CONFIG_ROOT/$SELECTED/detect"
  if [ -f $DF ]; then
    if source "$DF"; then
      return 0
    else
      return 1
    fi
  else
    return 0
  fi
}

_run_selected() {
  SELECTED=$1

  if [[ "$SELECTED" != "" ]]; then
    SELECTED=$(echo $SELECTED | sed 's/[ ]*::.*$//')
    if _run_detect $SELECTED; then
      info "## ITEM=${SELECTED}"
      "$CONFIG_ROOT/$SELECTED/run"
      info "## ITEM/${SELECTED}"
    else
      info "$SELECTED is already installed"
    fi
  fi
}

if [[ "$ITEM" == "" ]]; then
  SELECTED=$(cfg ls | fzf)
else
  SELECTED=$(cfg ls | fzf -1 -q"$ITEM")
fi

_run_selected $SELECTED
